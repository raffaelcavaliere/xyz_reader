<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.XYZ" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="android:navigationBarColor">@color/theme_primary_dark</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:colorForeground">@color/foreground_light</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:statusBarColor">@color/theme_primary_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.XYZ.ArticleListActivity" parent="Theme.XYZ">
        <item name="android:statusBarColor">@color/theme_primary_dark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="Theme.XYZ.ArticleDetailActivity" parent="Theme.XYZ">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowEnterTransition">@transition/slide_up</item>
        <item name="android:windowReturnTransition">@transition/fade_out</item>
    </style>
</resources>